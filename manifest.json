{
  "browser_specific_settings":{
    "gecko": {
      "id": "2@s-amberg",
      "strict_min_version": "57.0"
    }
  },
  "name": "loa extensions",
    "description": "enables various interactions and enhancements for lost ark websites",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
     ],
     "host_permissions": [
      "https://loa-todo.com/"
    ],
     "browser_action": {
        "default_title": "LOA",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/block16.png",
            "32": "/images/block32.png",
            "64": "/images/block64.png",
            "128": "/images/block128.png"
          }
      },
      "content_scripts": [
        {
          "matches": ["http://*/*","https://*/*"],
          "js": [
            "content.js"
          ]
        }
      ],
      "icons": {
        "16": "/images/block16.png",
        "32": "/images/block32.png",
        "64": "/images/block64.png",
        "128": "/images/block128.png"
      }
  }